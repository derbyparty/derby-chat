html, body
  height: 100%

header
  position: absolute
  left: 0
  top: 0
  height: 60px

footer
  position: absolute
  left: 0
  right: 0
  bottom: 0
  display: table
  height: 100px
  width: 100%

  div
    display: table-cell

.column
  position: absolute
  top: 60px
  bottom: 100px
  overflow: auto

.left
  width: 16.6%

.center
  width: 66.6%

.right
  width: 16.6%

#threads
  left: 0

#chat
  left: 16.6%

#users
  left: 83.3%

.answer
  background-color: #ddd

.message 
  display: table
  width: 100%

.message-header
  display: table-cell
  width: 140px

.message-text
  display: table-cell

.enter-container
  display: table
  width: 100%

.enter-header
  display: table-cell
  width: 140px

.enter
  display: table-cell

